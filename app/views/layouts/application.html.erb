<!DOCTYPE html>
<html>
  <head>
    <title>ContactsAppClient</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <p><a href="/client/signup">Sign Up</a></p>
    <p><a href="/client/login">Log In</a></p>
    <p><a href="/client/logout" data-method="delete">Log Out</a></p>
    <p><%= @jwt %></p>
    <% flash.each do |key, message| %>
      <p><%= message %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
